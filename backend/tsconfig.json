{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "lib": ["ES5", "ES6"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./customTypes"],
  },
  "exclude": ["node_modules"]
}
